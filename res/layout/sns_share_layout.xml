<?xml version="1.0" encoding="utf-8" ?> 
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" 
    android:orientation="vertical" 
    android:background="#FFFFFF"
    android:layout_width="fill_parent" 
    android:layout_height="200dp" >
  
  <RelativeLayout 
      android:id="@+id/title_bar"
      android:layout_width="fill_parent" 
      android:layout_height="44dip"
      android:layout_alignParentTop="true" 
      android:background="@drawable/sns_shareto_title" >
    <Button
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:background="@drawable/back_white"
	android:layout_centerVertical="true"
	android:layout_alignParentLeft="true"
	android:id="@+id/btn_return" />    
    
    <TextView
	android:id="@+id/title"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content" 
	android:textColor="#FFFFFF"
	android:text="分享我的颈椎健康得分"
	android:layout_centerHorizontal="true"
	android:layout_centerVertical="true"
	android:textSize="20sp"/>

    <Button
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:background="@drawable/sns_sina"
	android:layout_alignParentRight="true"
	android:layout_marginRight="10dp"
	android:layout_centerVertical="true"
	android:id="@+id/switch_sns" />
    />   
    
  </RelativeLayout>
  
  <RelativeLayout 
      android:id="@+id/main"
      android:layout_width="fill_parent"
      android:layout_height="fill_parent"
      android:layout_below="@+id/title_bar"
      android:layout_above="@+id/bottom"
      android:layout_marginBottom="0dip">               
    
    <EditText
	android:background="@drawable/share_bg_top"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:textSize="17sp"
	android:textColor="#8eb94b" 
	android:clickable="true"
	android:focusable="true"
	android:autoLink="all"
	android:gravity="top" 
	android:linksClickable="false"
	android:textColorLink="#0000ff"  
	android:id="@+id/sns_share_edit"
	android:layout_above="@+id/image"
	android:scrollbars="vertical"/>
    
    <TextView
	android:layout_width="wrap_content"
	android:layout_height="20dip" 
	android:layout_alignParentBottom="true"
	android:id="@+id/nickName" 
	android:layout_marginBottom="10dip"
	android:layout_alignParentLeft="true"
	android:layout_marginLeft="10dip"
	android:textColor="#000000"/> 

  </RelativeLayout>
  
  <RelativeLayout
      android:id="@+id/bottom"
      android:layout_width="fill_parent" 
      android:layout_height="44dip"
      android:layout_alignParentBottom="true" 
      android:layout_centerInParent="false"
      android:background="@drawable/share_bg_bottom">
    <TextView 
	android:id="@+id/word_count"
	android:layout_alignParentLeft="true" 
	android:layout_width="wrap_content"
	android:layout_height="wrap_content" 
	android:textColor="#8eb94b"
	android:text="140" android:gravity="center"
	android:paddingLeft="15dip"
	android:layout_centerVertical="true"
	android:textSize="15sp"/>
	
	<Button
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:background="@drawable/btn_bg"
	    android:text="发布" 
	    android:textColor="#8eb94b"
	    android:textSize="19dp"
	    android:layout_alignParentBottom="true" 
	    android:layout_alignParentRight="true"
	    android:layout_marginRight="8dip" 
	    android:id="@+id/btn_send" />             
      </RelativeLayout>
      
    </RelativeLayout>