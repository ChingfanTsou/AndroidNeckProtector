<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/home_page_view"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/home_bg">

  <TextView
      android:id="@+id/main_title_text"
      style="@style/title_text_style"
      android:text="@string/main_title_bar_text"/>

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/main_pannel"
      android:layout_below="@id/main_title_text"
      android:layout_marginTop="20dp">

    <TextView
	android:id="@+id/rating_textview"
	android:text="@string/today_rating_text"
	android:textSize="20sp"
	android:layout_marginLeft="20dp"
	android:textColor="#000000"
	android:layout_width="wrap_content"
	android:layout_height="40dp"
	android:layout_alignParentTop="true"/>

    <ImageView
	android:id="@+id/score_image_0"
	android:layout_below="@id/rating_textview"
	android:layout_alignParentLeft="true"
	android:layout_marginLeft="20dp"
	android:layout_width="wrap_content"
	android:layout_height="100dp"
	android:src="@drawable/green_0"/>

    <ImageView
	android:id="@+id/score_image_1"
	android:layout_below="@id/rating_textview"
	android:layout_toRightOf="@id/score_image_0"
	android:layout_marginLeft="5dp"
	android:layout_width="wrap_content"
	android:layout_height="100dp"
	android:src="@drawable/green_0"/>
    <Button
	android:id="@+id/info_button"
	android:layout_below="@id/rating_textview"
	android:layout_toRightOf="@id/score_image_1"
	android:layout_marginLeft="20dp"
	android:layout_marginTop="10dp"
	android:layout_width="30dp"
	android:layout_height="30dp"
	android:background="@drawable/home_explain" />

    <ImageView
	android:id="@+id/score_image_2"
	android:layout_below="@id/info_button"
	android:layout_toRightOf="@id/score_image_1"
	android:layout_marginLeft="10dp"
	android:layout_marginTop="10dp"
	android:layout_width="wrap_content"
	android:layout_height="50dp"
	android:src="@drawable/green_score"/>

    <Button
	android:id="@+id/sns_share_button"
	android:layout_toRightOf="@id/score_image_2"
	android:layout_marginLeft="20dp"
	android:layout_alignBottom="@id/score_image_2"
	android:layout_width="wrap_content"
	android:layout_height="45dp"
	android:background="@drawable/home_share" />
    
    <Button
	android:id="@+id/count_info_button"
	android:layout_toRightOf="@id/sns_share_button"
	android:layout_alignBottom="@id/score_image_2"
	android:layout_width="wrap_content"
	android:layout_height="45dp"
	android:layout_alignParentRight="true"
	android:background="@drawable/home_bar" />

    <Button
	android:id="@+id/time_scroll_button"
	android:layout_width="wrap_content"
	android:layout_height="43dp"
	android:layout_alignParentRight="true"
	android:layout_above="@id/count_info_button"
	android:layout_marginBottom="10dp"
	android:background="@drawable/home_clock"/>

  </RelativeLayout>

    <org.footoo.cjflsq.neck.gallery.GalleryFlow
	android:layout_marginTop="5dp"
	android:layout_below="@id/main_pannel"
	android:id="@+id/gallery"
	android:layout_width="fill_parent"
	android:layout_height="300dp"/>

  <RelativeLayout
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentBottom="true"
      android:layout_marginBottom="5dp"
      android:layout_below="@id/gallery"
      android:id="@+id/home_bottom_bar"
      android:gravity="center_vertical">

    <Button
	android:id="@+id/knowledge_button"
	android:layout_alignParentLeft="true"
	android:layout_marginLeft="5dp"
	android:layout_width="32dp"
	android:layout_height="35dp"
	android:background="@drawable/home_know" />

    <Button
	android:id="@+id/help_button"
	android:layout_alignParentRight="true"
	android:layout_marginRight="5dp"
	android:layout_width="32dp"
	android:layout_height="35dp"
	android:background="@drawable/home_help" />
  </RelativeLayout>

</RelativeLayout>