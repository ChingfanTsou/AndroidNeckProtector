<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/home_page_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/home_bg"
        android:orientation="vertical">

    <TextView
            android:id="@+id/main_title_text"
            style="@style/title_text_style"
            android:text="@string/main_title_bar_text"/>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/rating_textview"
                android:text="@string/today_rating_text"
                android:textSize="20sp"
                android:layout_marginLeft="20dp"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_alignParentTop="true"/>

        <ImageView
                android:id="@+id/score_image_0"
                android:layout_below="@id/rating_textview"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:src="@drawable/green_0"/>

        <ImageView
                android:id="@+id/score_image_1"
                android:layout_below="@id/rating_textview"
                android:layout_toRightOf="@id/score_image_0"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:src="@drawable/green_0"/>

        <Button
                android:id="@+id/info_button"
                android:layout_below="@id/rating_textview"
                android:layout_toRightOf="@id/score_image_1"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/home_explain"/>

        <ImageView
                android:id="@+id/score_image_2"
                android:layout_below="@id/info_button"
                android:layout_toRightOf="@id/score_image_1"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:src="@drawable/green_score"/>

        <Button
                android:id="@+id/sns_share_button"
                android:layout_below="@id/info_button"
                android:layout_toRightOf="@id/score_image_2"
                android:layout_marginLeft="20dp"
                android:layout_alignBottom="@id/score_image_2"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:background="@drawable/home_share"/>

        <Button
                android:id="@+id/count_info_button"
                android:layout_below="@id/info_button"
                android:layout_toRightOf="@id/sns_share_button"
                android:layout_alignBottom="@id/score_image_2"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/home_bar"/>

    </RelativeLayout>

    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true">

        <Button
                android:id="@+id/knowledge_button"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/home_explain"/>
        <Button
                android:id="@+id/help_button"
                android:layout_toRightOf="@id/knowledge_button"
                android:layout_gravity="right"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/home_explain"/>
    </RelativeLayout>
    <org.footoo.cjflsq.neck.gallery.GalleryFlow
            android:id="@+id/gallery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleY="0.5"
            />
</LinearLayout>
